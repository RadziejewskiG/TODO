<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogThemeFadeScale" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowEnterAnimation">@anim/fade_in_scale_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog_0_ms</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <!-- Used because of bug in material api -->
        <item name="android:layout_margin">@null</item>

        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>

        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MaterialTextViewStyle" parent="TextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleMedium" parent="TextStyleMedium">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleTitle" parent="TextStyleTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleMediumTitle" parent="TextStyleMediumTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:gravity">top</item>

        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="errorIconDrawable">@null</item>

        <item name="boxStrokeColor">@color/selector_filled_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/dp1_5</item>
        <item name="boxStrokeWidthFocused">@dimen/dp1_5</item>

        <!-- hint color when not focused -->
        <item name="android:textColorHint">@color/black_lighter_alpha</item>
        <!-- hint color when focused -->
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="hintTextAppearance">@style/Text12</item>

        <item name="errorTextAppearance">@style/Text10</item>
        <item name="counterTextAppearance">@style/Text10</item>

        <item name="counterOverflowTextColor">?attr/colorError</item>
        <item name="counterOverflowTextAppearance">@style/Text10</item>

        <item name="shapeAppearanceOverlay">@style/InputLayoutShapeAppearance</item>
        <item name="materialThemeOverlay">@style/MaterialThemeOverlayOutlinedBox</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>

        <item name="android:minWidth">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
    </style>

    <style name="MaterialThemeOverlayOutlinedBox" parent="Text15">
        <item name="editTextStyle">@style/TextInputLayoutChildStyle</item>
    </style>

    <style name="TextInputLayoutChildStyle" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
    </style>

    <style name="InputLayoutShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp2</item>
    </style>

    <style name="InputEditText">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/MaterialOverlayTextButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeTextButton</item>

        <item name="android:textColor">@color/selector_text_button_text_color</item>
        <item name="rippleColor">?attr/rippleColor</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">82dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>

        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="MaterialOverlayTextButton" parent="TextStyleMedium">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ShapeTextButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextButtonStylePrimary" parent="TextButtonStyle">
        <item name="android:textColor">@color/selector_text_button_text_color_primary</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_checkbox_color</item>
        <item name="android:textAppearance">@style/Text15</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextStyleMedium" parent="TextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontFamily">@font/roboto_slab_medium</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="TextStyleMediumTitle" parent="TextStyleTitle">
        <item name="fontFamily">@font/roboto_slab_semi_bold</item>
    </style>

    <style name="Text15" parent="TextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text12" parent="TextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text10" parent="TextStyle">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
